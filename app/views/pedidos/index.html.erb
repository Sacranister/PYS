<p id="notice"><%= notice %></p>

<h1>Listing Pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Estado ped cod</th>
      <th>Guia desp ped cod</th>
      <th>Pro cod</th>
      <th>Ped fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.estado_ped_cod %></td>
        <td><%= pedido.guia_desp_ped_cod %></td>
        <td><%= pedido.pro_cod %></td>
        <td><%= pedido.ped_fecha %></td>
        <td><%= link_to 'Show', pedido %></td>
        <td><%= link_to 'Edit', edit_pedido_path(pedido) %></td>
        <td><%= link_to 'Destroy', pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

