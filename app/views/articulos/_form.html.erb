<%= form_for(@articulo) do |f| %>
  <% if @articulo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@articulo.errors.count, "error") %> antes de guardar:</h2>

      <ul>
      <% @articulo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :cat_cod %><br>
    <%= f.number_field :cat_cod %>
  </div>
  <div class="field">
    <%= f.label :art_nom %><br>
    <%= f.text_field :art_nom %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
