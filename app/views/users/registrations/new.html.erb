<div class="box">
  <h2>Registrarse</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
      <div><%= f.label :nombre %><br />
          <%= f.text_field :cli_nom, autofocus: true %>
      </div>
    <div><%= f.label :RUT %><br />
          <%= f.text_field :cli_rut, autofocus: true %>
    </div>
  <div><%= f.label :telefono %><br />
          <%= f.text_field :cli_tel, autofocus: true %>
  </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres mÃ­nimo)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
    <div class="actions">
      <%=@clientes=Cliente.new
          @clientes.cli_tel=resource.cli_tel
          @clientes.save 
      f.submit "Registrarse"
       %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>