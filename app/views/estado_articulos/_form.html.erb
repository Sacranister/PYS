<%= form_for(@estado_articulo) do |f| %>
  <% if @estado_articulo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@estado_articulo.errors.count, "error") %> antes de guardar:</h2>

      <ul>
      <% @estado_articulo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :est_art_nom %><br>
    <%= f.text_field :est_art_nom %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
