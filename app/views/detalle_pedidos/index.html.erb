<div class="box">
  <h1>Lista Detalle Pedidos</h1>

  <table>
    <thead>
      <tr>
        <th>Ped cod</th>
        <th>Det ped linea</th>
        <th>Ins cod</th>
        <th>Ins cod prov</th>
        <th>Det ped cant</th>
        <th>Det ped precio</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @detalle_pedidos.each do |detalle_pedido| %>
        <tr>
          <td><%= detalle_pedido.ped_cod %></td>
          <td><%= detalle_pedido.det_ped_linea %></td>
          <td><%= detalle_pedido.ins_cod %></td>
          <td><%= detalle_pedido.ins_cod_prov %></td>
          <td><%= detalle_pedido.det_ped_cant %></td>
          <td><%= detalle_pedido.det_ped_precio %></td>
          <td><%= link_to 'Ver', detalle_pedido %></td>
          <td><%= link_to 'Editar', edit_detalle_pedido_path(detalle_pedido) %></td>
          <td><%= link_to 'Eliminar', detalle_pedido, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <div class="boton"><%= button_to new_detalle_pedido_path, {method: :get, class: "btn btn-primary"} do %><i class="glyphicon glyphicon-plus"></i> Agregar Detalle pedido
  <% end %></div>
</div>