<h1>Listing Estado Pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Estado ped nom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estado_pedidos.each do |estado_pedido| %>
      <tr>
        <td><%= estado_pedido.estado_ped_nom %></td>
        <td><%= link_to 'Show', estado_pedido %></td>
        <td><%= link_to 'Edit', edit_estado_pedido_path(estado_pedido) %></td>
        <td><%= link_to 'Destroy', estado_pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

